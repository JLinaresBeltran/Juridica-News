# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/editorial_juridico?schema=public"

# Redis Configuration  
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:5173"

# AI Services Configuration
# Para an√°lisis de sentencias con GPT-4 Mini y Gemini
OPENAI_API_KEY="sk-your-openai-api-key-here"
GEMINI_API_KEY="AIzaSy-your-gemini-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# AI Analysis Settings
AI_DEFAULT_MODEL="openai"  # openai | gemini
AI_MAX_BATCH_SIZE=20
AI_RATE_LIMIT_DELAY=2000  # milliseconds between requests

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_DIR="./uploads"

# External Services
S3_BUCKET_NAME="editorial-juridico-storage"
S3_ACCESS_KEY_ID="your-s3-access-key"
S3_SECRET_ACCESS_KEY="your-s3-secret-key"
S3_REGION="us-east-1"

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="editorial_juridico"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE="./logs/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping Configuration
SCRAPING_INTERVAL_HOURS=6
SCRAPING_MAX_CONCURRENT=3

# Email Configuration (for notifications)
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_USER="noreply@editorialjuridico.com"
SMTP_PASSWORD="your-smtp-password"